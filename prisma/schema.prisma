// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Organization {
  id          Int         @id @default(autoincrement())
  name        String
  username    String
  password    String
  address     String
  description String
  email       String      @unique
  phone       String      @unique
  Programme   Programme[]
}

model OrganizationSubmission {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  address     String
  email       String  @unique
  phone       String  @unique
  accepted    Boolean @default(false)
}

model Location {
  id        Int         @id @default(autoincrement())
  latitude  Float
  longitude Float
  Volunteer Volunteer[]
  Programme Programme[]
}

model Volunteer {
  id               Int                     @id @default(autoincrement())
  fname            String
  lname            String
  username         String                  @unique
  email            String                  @unique
  dob              DateTime
  phone            String                  @unique
  bloodAvaibality  Boolean                 @default(false)
  lastBloodDonated DateTime
  experience       Int
  locationId       Int?
  location         Location?               @relation(fields: [locationId], references: [id])
  programmes       VolunteersOnProgramme[]
}

model Programme {
  id                  Int                     @id @default(autoincrement())
  title               String
  description         String
  volunteersRequired  Int
  experience          Int
  organizationId      Int
  posted              DateTime
  expiry              DateTime
  execution           DateTime
  locationId          Int
  organization        Organization            @relation(fields: [organizationId], references: [id])
  location            Location                @relation(fields: [locationId], references: [id])
  ProgrammeApplicants VolunteersOnProgramme[]
}

model VolunteersOnProgramme {
  id          Int       @id @default(autoincrement())
  programmeId Int
  volunteerId Int
  selected    Boolean   @default(false)
  programme   Programme @relation(fields: [programmeId], references: [id])
  volunteer   Volunteer @relation(fields: [volunteerId], references: [id])
}
